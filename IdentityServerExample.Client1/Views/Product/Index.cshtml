@{
}
@model List<Product>

    <table class="table table-bordered">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
         
        </thead>
        <tbody>
        @foreach (Product product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
            </tr>
        }
        </tbody>
    </table>
